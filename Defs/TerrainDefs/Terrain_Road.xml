<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <TerrainDef>
    <defName>DirtRecent</defName>
    <label>Recently packed dirt</label>
    <texturePath>Terrain/Surfaces/PackedDirt</texturePath><!-- TO DO : Find a texture -->
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>360</renderPrecedence>
    <pathCost>1</pathCost>
		<description>Packed dirt for recently built paths and roads. Neither beautiful nor clean, they still make good surfaces for cheap roads. Deconstructing packed dirt yields no resources.</description>
    <layerable>false</layerable><!-- Seems to mean this cannot be put on top of another terrain -->
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <statBases>
      <Beauty>-1</Beauty>
      <Cleanliness>-1</Cleanliness>
    </statBases>
    <fertility>0.0</fertility>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
      <!-- <li>Diggable</li> : I see no reason to keep this, it's used nowhere I can find -->
    </affordances>
		<tags>
			<li>Road</li>
		</tags>

    <!-- Not sure of any of the stuff below-->
    <scatterType>Rocky</scatterType>
    <generatedFilth>Filth_Dirt</generatedFilth>
  </TerrainDef>

	<TerrainDef>
		<defName>StoneRecent</defName>
		<label>Recently built sandstone flagstone</label>
		<texturePath>Terrain/Surfaces/Flagstone</texturePath>
        <color>(64,64,64)</color>
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>220</renderPrecedence>
    <pathCost>0</pathCost>
    <description>Roughly-cut stone recently built tiles. These are not beautiful, but they make good surfaces for roads and outdoor walkways. Deconstructing flagstone yields no resources.</description>
    <layerable>true</layerable>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
		<statBases>
			<!-- Removing this, I don't want it to be buildable on a map, only generated from a road on the WorldMap <WorkToBuild>500</WorkToBuild> -->
			<Beauty>0</Beauty>
		</statBases>
    <fertility>0</fertility>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
    </affordances>
    <tags>
      <li>Road</li>
    </tags>

    <!-- Removing Construction-related tags : don't want to build those directly from a map
    <designationCategory>Floors</designationCategory>
		<costList>
			<BlocksSandstone>4</BlocksSandstone>
		</costList>
    <designatorDropdown>Floor_Flagstone</designatorDropdown>
    <constructEffect>ConstructDirt</constructEffect>
    <acceptTerrainSourceFilth>True</acceptTerrainSourceFilth>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    -->
	</TerrainDef>

  <TerrainDef>
    <defName>AsphaltRecent</defName>
    <label>recently built asphalt</label>
    <texturePath>Terrain/Surfaces/AsphaltRecent</texturePath>
    <color>(64,64,64)</color>
    <edgeType>FadeRough</edgeType>
  	<renderPrecedence>380</renderPrecedence>
    <pathCost>0</pathCost>
    <description>Recently built Asphalt. Excellent for roads. Deconstructing asphalt yields no resources.</description>
    <layerable>true</layerable>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <statBases>
      <Beauty>-1</Beauty>
      <Cleanliness>0</Cleanliness>
    </statBases>
    <fertility>0.0</fertility>
    <affordances>
      <li>Light</li>
      <li>Medium</li> <!-- The original BorkenApshalt didn't have medium, and had some weird indexes like <li ListIndex="0"> -->
      <li>Heavy</li>
    </affordances>
    <acceptFilth>false</acceptFilth>
    <tags>
      <li>Road</li>
    </tags>

    <!-- Not sure of any of the stuff below-->
  </TerrainDef>
  
   <TerrainDef>
    <defName>BridgeRecent</defName>
    <label>recently built bridge</label>
    <description>A flat wooden surface on supportive beams which can be built over water. You can build non-heavy structures on bridges, but be careful - bridges are fragile. If a bridge falls, buildings on top of it fall as well.</description>
    <texturePath>Terrain/Surfaces/Bridge</texturePath>
    <layerable>true</layerable>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
    </affordances>
    <designationCategory>Structure</designationCategory>
    <fertility>0</fertility>
    <constructEffect>ConstructWood</constructEffect>
      <acceptTerrainSourceFilth>True</acceptTerrainSourceFilth>
    <terrainAffordanceNeeded>Bridgeable</terrainAffordanceNeeded>
    <edgeType>Hard</edgeType>
    <renderPrecedence>400</renderPrecedence>
    <statBases>
      <WorkToBuild>1500</WorkToBuild>
      <Flammability>0.8</Flammability>
    </statBases>
    <costList>
      <WoodLog>12</WoodLog>
    </costList>
    <designationHotKey>Misc4</designationHotKey>
    <destroyOnBombDamageThreshold>35</destroyOnBombDamageThreshold>
    <destroyBuildingsOnDestroyed>true</destroyBuildingsOnDestroyed>
    <destroyEffect>Bridge_Collapse</destroyEffect>
    <destroyEffectWater>Bridge_CollapseWater</destroyEffectWater>
  </TerrainDef>

  <TerrainDef>
    <defName>StoneBridgeRecent</defName>
    <label>recently built stone bridge</label>
    <description>A stone structure which can be built over water. You can build any structures on stone bridges, but be careful - they can still be destroyed. If a bridge falls, buildings on top of it fall as well.</description>
    <texturePath>Terrain/Surfaces/Bridge</texturePath>
    <layerable>true</layerable>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
    </affordances>
    <fertility>0</fertility>
    <acceptTerrainSourceFilth>True</acceptTerrainSourceFilth>
    <terrainAffordanceNeeded>Bridgeable</terrainAffordanceNeeded>
    <edgeType>Hard</edgeType>
    <renderPrecedence>400</renderPrecedence>
    <statBases>
      <WorkToBuild>4500</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <destroyOnBombDamageThreshold>350</destroyOnBombDamageThreshold>
    <destroyBuildingsOnDestroyed>true</destroyBuildingsOnDestroyed>
    <destroyEffect>Bridge_Collapse</destroyEffect>
    <destroyEffectWater>Bridge_CollapseWater</destroyEffectWater>
  </TerrainDef>
</Defs>